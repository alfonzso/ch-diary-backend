<div
    id="DailyCourseContainer"
    class="d-flex flex-column pt-4"
    {{!-- style="font-size: 75%; flex: 1.25" --}}
  >
    {{> _daily_course/Header}}

    {{#if entriesByDate}}

      {{#each entriesByDate as |entry|}}
        <div
          id="{{entry.id}}"
          class="card d-flex justify-content-between flex-column p-2 m-2 chd-shadow"
        >
          {{> _daily_course/FoodInfo entry=entry }}
          <div id="FoodWrapper" class="d-flex justify-content-around flex-row ">

            <div id="FoodOtherInfo" class="col-4 d-flex flex-column justify-content-center align-items-center  ">
                  <div>Ch: {{entry.ChRatio.ch}}</div>
                  <div>Insulin Ration: {{entry.ChRatio.insulinRation}}</div>
            </div>
            <div id="FoodTables" class="d-flex justify-content-around flex-column col-8">
              {{> _daily_course/FoodProp entry=entry }}
              {{> _daily_course/ChRatio entry=entry }}
            </div>
          </div>

        </div>
      {{/each}}

    {{else}}
      {{> _daily_course/Empty}}
    {{/if}}
</div>