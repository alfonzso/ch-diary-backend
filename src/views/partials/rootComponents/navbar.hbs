<div
  id="navDiary"
  hx-get="/navbar"
  hx-swap="innerHTML"
  hx-trigger="loginSuccess from:body"
>
  <nav
    class="navbar navbar-expand-lg navbar-light bg-light chd-shadow rounded pe-2 ps-2"
    hx-boost="true"
  >
    <a class="navbar-brand" href="#">
      Chdiary
    </a>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="/" hx-target="#home" hx-swap="outerHTML">
            Home
          </a>
        </li>
        {{#if isLoggedIn}}
          <li class="nav-item">
            <a
              class="nav-link"
              href="/diary"
              hx-target="#home"
              hx-swap="outerHTML"
            >
              All Diaries
            </a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              href="/daily-course"
              hx-target="#home"
              hx-swap="outerHTML"
            >
              Daily courses
            </a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              hx-get="/import"
              hx-target="#interfoodModal"
              data-bs-toggle="modal"
              data-bs-target="#interfoodModal"
              hx-trigger="click"
            >
              Import Interfood
            </a>
          </li>
        {{/if}}
        <li class="nav-item">
          <a class="nav-link" href="/about">
            About
          </a>
        </li>
      </ul>
      <div class="d-flex flex-row me-4 gap-1" id="userInfo">
        <div id="untilTokenExpired" style="font-size: 10px"></div>
        {{#if user}}
          <div id="anonym">
            Hello {{user.nickname}}
          </div>
        {{else}}
          <div id="anonym">
            Hello Anonymus !
          </div>
        {{/if}}
      </div>
      <div id="authContainer" class="d-flex gap-4">
        {{#if isLoggedIn}}
          <a
            class="nav-link"
            href="/logout"
            hx-target="#home"
            hx-replace-url="/"
          >
            Logout
          </a>
        {{else}}
          <a class="nav-link" href="/login" hx-target="#home">
            Login
          </a>
          <a class="nav-link" href="/register" hx-target="#home">
            Register
          </a>
        {{/if}}
      </div>
    </div>
  </nav>
</div>