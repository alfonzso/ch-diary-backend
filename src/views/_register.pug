#register.container
  .row
    .row.col.s4
      h3 Sign up!
    form.col.s12(hx-post='/register' hx-target='#register' method='post')
      .row
        .input-field.col.s12
          input#email.validate(type='email' name='email')
          label(for='email') Email
          span.helper-text(data-error='Please enter a valid email.' data-success='')
      .row
        .input-field.col.s12
          input#password.validate(name='password' type='password')
          label(for='password') Password
      .row.col.s4
        button.btn.waves-effect.waves-light.indigo.darken-2(type='submit' name='action')
          | Register
          i.material-icons.right send
    .row.col.s4
      p
        | Already have an Account?
        a(href='/') Login here.
